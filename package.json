{
  "name": "pr-comments-viewer",
  "displayName": "PR Comments Viewer",
  "description": "View GitHub PR review comments directly in your IDE",
  "version": "0.1.0",
  "license": "MIT",
  "publisher": "pr-comments-viewer",
  "repository": {
    "type": "git",
    "url": "https://github.com/AnuprajGudisse/git_commit"
  },
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "views": {
      "explorer": [
        {
          "id": "prCommentsView",
          "name": "PR Comments",
          "when": "prComments.hasComments"
        }
      ]
    },
    "commands": [
      {
        "command": "pr-comments.fetch",
        "title": "PR Comments: Fetch PR Comments",
        "icon": "$(cloud-download)"
      },
      {
        "command": "pr-comments.clear",
        "title": "PR Comments: Clear Comments",
        "icon": "$(clear-all)"
      },
      {
        "command": "pr-comments.showLog",
        "title": "PR Comments: Show Log"
      },
      {
        "command": "pr-comments.reply",
        "title": "Reply to Comment",
        "icon": "$(reply)"
      },
      {
        "command": "pr-comments.addComment",
        "title": "PR Comments: Add Comment at Cursor",
        "icon": "$(add)"
      },
      {
        "command": "pr-comments.filterByReviewer",
        "title": "PR Comments: Filter by Reviewer",
        "icon": "$(filter)"
      },
      {
        "command": "pr-comments.filterByStatus",
        "title": "PR Comments: Filter by Status"
      },
      {
        "command": "pr-comments.clearFilters",
        "title": "PR Comments: Clear Filters"
      },
      {
        "command": "pr-comments.goToComment",
        "title": "Go to Comment"
      },
      {
        "command": "pr-comments.refresh",
        "title": "Refresh Comments",
        "icon": "$(refresh)"
      },
      {
        "command": "pr-comments.showStats",
        "title": "PR Comments: Show Statistics"
      },
      {
        "command": "pr-comments.toggleAutoRefresh",
        "title": "PR Comments: Toggle Auto-Refresh",
        "icon": "$(sync)"
      },
      {
        "command": "pr-comments.nextComment",
        "title": "PR Comments: Go to Next Comment",
        "icon": "$(arrow-down)"
      },
      {
        "command": "pr-comments.previousComment",
        "title": "PR Comments: Go to Previous Comment",
        "icon": "$(arrow-up)"
      },
      {
        "command": "pr-comments.resolveThread",
        "title": "PR Comments: Resolve Thread",
        "icon": "$(check)"
      },
      {
        "command": "pr-comments.unresolveThread",
        "title": "PR Comments: Unresolve Thread",
        "icon": "$(circle-slash)"
      },
      {
        "command": "pr-comments.showConversation",
        "title": "PR Comments: Show PR Conversation"
      },
      {
        "command": "pr-comments.addConversationComment",
        "title": "PR Comments: Add Conversation Comment",
        "icon": "$(comment)"
      },
      {
        "command": "pr-comments.switchPR",
        "title": "PR Comments: Switch PR",
        "icon": "$(git-pull-request)"
      },
      {
        "command": "pr-comments.threadStats",
        "title": "PR Comments: Show Thread Statistics"
      },
      {
        "command": "pr-comments.toggleResolution",
        "title": "Toggle Thread Resolution",
        "icon": "$(check)"
      }
    ],
    "keybindings": [
      {
        "command": "pr-comments.fetch",
        "key": "ctrl+shift+p f",
        "mac": "cmd+shift+p f",
        "when": "editorTextFocus"
      },
      {
        "command": "pr-comments.nextComment",
        "key": "alt+]",
        "mac": "alt+]",
        "when": "editorTextFocus"
      },
      {
        "command": "pr-comments.previousComment",
        "key": "alt+[",
        "mac": "alt+[",
        "when": "editorTextFocus"
      },
      {
        "command": "pr-comments.reply",
        "key": "ctrl+shift+r",
        "mac": "cmd+shift+r",
        "when": "editorTextFocus && prComments.hasRepoInfo"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "pr-comments.refresh",
          "when": "view == prCommentsView",
          "group": "navigation"
        },
        {
          "command": "pr-comments.switchPR",
          "when": "view == prCommentsView",
          "group": "navigation"
        },
        {
          "command": "pr-comments.filterByReviewer",
          "when": "view == prCommentsView",
          "group": "navigation"
        },
        {
          "command": "pr-comments.showConversation",
          "when": "view == prCommentsView"
        },
        {
          "command": "pr-comments.threadStats",
          "when": "view == prCommentsView"
        },
        {
          "command": "pr-comments.clearFilters",
          "when": "view == prCommentsView"
        }
      ],
      "view/item/context": [
        {
          "command": "pr-comments.reply",
          "when": "view == prCommentsView && viewItem == thread",
          "group": "inline"
        },
        {
          "command": "pr-comments.reply",
          "when": "view == prCommentsView && viewItem == comment",
          "group": "inline"
        },
        {
          "command": "pr-comments.toggleResolution",
          "when": "view == prCommentsView && viewItem == thread",
          "group": "inline"
        }
      ],
      "editor/context": [
        {
          "command": "pr-comments.addComment",
          "group": "prComments",
          "when": "prComments.hasRepoInfo"
        }
      ]
    },
    "configuration": {
      "title": "PR Comments Viewer",
      "properties": {
        "prComments.githubToken": {
          "type": "string",
          "default": "",
          "description": "GitHub Personal Access Token for API access",
          "scope": "application"
        },
        "prComments.autoFetch": {
          "type": "boolean",
          "default": false,
          "description": "Automatically fetch PR comments on workspace open"
        },
        "prComments.highlightColor": {
          "type": "string",
          "default": "rgba(255, 200, 0, 0.2)",
          "description": "Background color for highlighted lines with comments (CSS color value)"
        },
        "prComments.commentIcon": {
          "type": "string",
          "default": "ðŸ’¬",
          "description": "Icon/emoji to display at the end of commented lines"
        },
        "prComments.showResolved": {
          "type": "boolean",
          "default": true,
          "description": "Show resolved comments (when available)"
        },
        "prComments.refreshInterval": {
          "type": "number",
          "default": 0,
          "minimum": 0,
          "maximum": 60,
          "description": "Auto-refresh interval in minutes (0 to disable, max 60)"
        },
        "prComments.githubEnterpriseUrl": {
          "type": "string",
          "default": "",
          "description": "GitHub Enterprise Server URL (e.g., https://github.mycompany.com). Leave empty for github.com"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.80.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@octokit/rest": "^20.0.0"
  }
}
